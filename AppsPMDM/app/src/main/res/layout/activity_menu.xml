<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuActivity">

    <Button
        android:id="@+id/btnHelloApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="HelloApp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMessageApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="MessageApp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/btnIMC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="IMCApp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/btnBoardgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="BoardgameApp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/btnColorsApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="ColorsApp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/btnSuperheroApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="SuperheroApp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
</LinearLayout>